<div class="container-fluid">

    <h1 class="page-header">Dashboard</h1>
    <div class="col-xs-12 col-md-8">
        <div class="row placeholders">
            <div class="col-xs-6 col-sm-3 placeholder">
                <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
                <h3 class="text-left">Name: Kevin Tam</h3>
                <h3 class="text-left">Role: Manager</h3>
                <h3 class="text-left">Department: Developer</h3>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">

            </div>
        </div>
    </div>
    <div class="col-xs-6 col-md-4 rightbar img-rounded">
        <h4 class="sub-header">Missing Shift</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shift in ViewBag.shiftDay)
                {
                    <tr>
                        <td>@shift</td>
                        @foreach (var type in ViewBag.shiftType)
                        {
                            <td>@type</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        
            <h4 class="sub-header">Shift Change Request</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone Number</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in ViewBag.empAvail)
                        {
                            <tr>
                                <td>@emp.employeeId</td>
                                <td>@emp.firstName</td>
                                <td>@emp.lastName</td>
                                <td>@emp.phoneNumber</td>
                                <td>@emp.role</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        
    </div>

    <div class="col-xs-12 col-md-8">
        <h2 class="sub-header">Employee Available Today</h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in ViewBag.empAvail)
                    {
                        <tr>
                            <td>@emp.employeeId</td>
                            <td>@emp.firstName</td>
                            <td>@emp.lastName</td>
                            <td>@emp.phoneNumber</td>
                            <td>@emp.role</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>

